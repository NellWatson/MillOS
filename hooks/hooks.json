{
  "hooks": {
    "types-ts-guard": {
      "enabled": true,
      "script": "./hooks/types-ts-guard.cjs",
      "description": "Extra friction when editing types.ts - the cascade epicenter",
      "filePatterns": ["types.ts", "types.tsx", "store.ts"],
      "blockOnFailure": false
    },
    "import-graph-checker": {
      "enabled": true,
      "script": "./hooks/import-graph-checker.cjs",
      "description": "Shows all importers when exports are modified to prevent cascades",
      "filePatterns": ["*.ts", "*.tsx"],
      "blockOnFailure": false
    },
    "flywheel-thrashing-detector": {
      "enabled": true,
      "script": "./hooks/flywheel-thrashing-detector.cjs",
      "description": "Detects repeated edits to same files (idiocy loop prevention)",
      "filePatterns": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "blockOnFailure": false
    },
    "pre-write": {
      "enabled": true,
      "script": "./hooks/pre-write.js",
      "description": "Enforces TypeScript and ESLint checking before any file write",
      "filePatterns": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "blockOnFailure": true
    }
  },
  "settings": {
    "bypassFlag": "--no-verify",
    "logLevel": "info",
    "timeout": 60000,
    "autoFix": {
      "eslint": true
    }
  },
  "linting": {
    "typescript": {
      "typecheckCommand": "npm run typecheck",
      "buildCommand": "npm run build"
    },
    "eslint": {
      "lintCommand": "npm run lint"
    },
    "prettier": {
      "checkCommand": "npm run format:check",
      "fixCommand": "npm run format"
    }
  }
}
